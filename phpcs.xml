<?xml version="1.0"?>
<ruleset name="Laravel Redis Stream">
    <description>The coding standard for Laravel Redis Stream package</description>

    <file>src</file>
    <file>tests</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/.phpstorm.meta.php</exclude-pattern>
    <exclude-pattern>*/_ide_helper.php</exclude-pattern>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="80"/>
    <arg value="np"/>

    <rule ref="PSR12"/>
</ruleset>